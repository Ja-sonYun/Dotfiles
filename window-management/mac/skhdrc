# Show system statistics
fn + lalt - 1 : "${HOME}"/.config/yabai/scripts/show_cpu.sh
fn + lalt - 2 : "${HOME}"/.config/yabai/scripts/show_mem.sh
fn + lalt - 3 : "${HOME}"/.config/yabai/scripts/show_bat.sh
fn + lalt - 4 : "${HOME}"/.config/yabai/scripts/show_disk.sh
fn + lalt - 5 : "${HOME}"/.config/yabai/scripts/show_song.sh

# Navigation
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east

# Moving windows
shift + lalt - h : yabai -m window --warp west
shift + lalt - j : yabai -m window --warp south
shift + lalt - k : yabai -m window --warp north
shift + lalt - l : yabai -m window --warp east

# Move focus container to workspace
shift + lalt - m : yabai -m window --space last; yabai -m space --focus last
shift + lalt - p : yabai -m window --space prev; yabai -m space --focus prev
shift + lalt - n : yabai -m window --space next; yabai -m space --focus next
shift + lalt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + lalt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + lalt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + lalt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + lalt - 5 : yabai -m window --space 5; yabai -m space --focus 5

# Move focus
lalt - 1 : skhd -k "ctrl + alt + cmd - 1"
lalt - 2 : skhd -k "ctrl + alt + cmd - 2"
lalt - 3 : skhd -k "ctrl + alt + cmd - 3"
lalt - 4 : skhd -k "ctrl + alt + cmd - 4"
lalt - 5 : skhd -k "ctrl + alt + cmd - 5"
lalt - 6 : skhd -k "ctrl + alt + cmd - 6"
lalt - 7 : skhd -k "ctrl + alt + cmd - 7"
lalt - 8 : skhd -k "ctrl + alt + cmd - 8"
# lalt - 1 : yabai -m space --focus 1
# lalt - 2 : yabai -m space --focus 2
# lalt - 3 : yabai -m space --focus 3
# lalt - 4 : yabai -m space --focus 4
# lalt - 5 : yabai -m space --focus 5
# lalt - n : yabai -m space --create
# lalt - d : yabai -m space --destroy

# Resize windows
ctrl + lalt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
ctrl + lalt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
ctrl + lalt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
ctrl + lalt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Equalize size of windows
ctrl + lalt - e : yabai -m space --balance

# Enable / Disable gaps in current workspace
ctrl + lalt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Rotate windows clockwise and anticlockwise
lalt - r         : yabai -m space --rotate 270
shift + lalt - r : yabai -m space --rotate 90

# Rotate on X and Y Axis
shift + lalt - x : yabai -m space --mirror x-axis
shift + lalt - y : yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + ctrl + lalt - h : yabai -m window --insert west
shift + ctrl + lalt - j : yabai -m window --insert south
shift + ctrl + lalt - k : yabai -m window --insert north
shift + ctrl + lalt - l : yabai -m window --insert east

# Float / Unfloat window
shift + lalt - space : \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Restart Yabai
shift + ctrl + lalt - r : \
    /usr/bin/env osascript <<< \
        "display notification \"Restarting Yabai\" with title \"Yabai\""; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Make window native fullscreen
lalt - f         : yabai -m window --toggle zoom-fullscreen
shift + lalt - f : yabai -m window --toggle native-fullscreen


# ----------------------------
# LangSwitch

ralt - 1 : im-select com.apple.keylayout.ABC
ralt - 2 : im-select com.apple.inputmethod.Kotoeri.RomajiTyping.Japanese
ralt - 3 : im-select com.apple.inputmethod.Korean.2SetKorean
